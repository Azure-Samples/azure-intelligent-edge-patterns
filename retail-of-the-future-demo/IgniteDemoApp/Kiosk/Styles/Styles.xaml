<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntelligentKioskSample">

    <Style x:Key="PageTitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="CharacterSpacing" Value="75"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="54, 10, 12, 0"/>
    </Style>

    <Style x:Key="PageTitleCommandBarStyle" TargetType="CommandBar" BasedOn="{StaticResource CommandBarRevealStyle}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="DefaultLabelPosition" Value="Right"/>
    </Style>

</ResourceDictionary>
