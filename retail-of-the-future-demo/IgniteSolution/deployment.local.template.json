{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "inventorycam": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
                "image": "ignite/camerastream",
                "createOptions": {
                    "Cmd": [
                        "'./camera-stream/run_camera.sh camera.py videos/shelf.mp4'"
                    ],
                    "ExposedPorts": {
                        "50011/tcp": {}
                    },
                    "HostConfig": {
                        "PortBindings": {
                            "50011/tcp": [
                                {
                                    "HostPort": "50011"
                                }
                            ]
                        }
                    }
                }
            }
        },
          "Counting1": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "ignite/counting",
              "createOptions": {
                "Cmd": [
                  "'./people-counting/exec_count.sh people_counter.py -i videos/example_01.mp4 -s 10 --id cam1 --set-count'"
                ],
                "ExposedPorts": {
                  "5680/tcp": {}
                },
                "HostConfig": {
                  "PortBindings": {
                    "5680/tcp": [
                      {
                        "HostPort": "5680"
                      }
                    ]
                  }
                }
              }
            }
          },
          "CountingAgg": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "ignite/counting",
              "createOptions": {
                "Cmd": [
                  "'./people-counting/exec_count.sh count-agg.py --interval 2 --port 5001'"
                ],
                "ExposedPorts": {
                  "5678/tcp": {},
                  "5001/tcp": {}
                },
                "HostConfig": {
                  "PortBindings": {
                    "5678/tcp": [
                      {
                        "HostPort": "5678"
                      }
                    ],
                    "5001/tcp": [
                      {
                        "HostPort": "5001"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "Counting1ToCountingAgg": "FROM /messages/modules/Counting1/outputs/peopleCount INTO BrokeredEndpoint(\"/modules/CountingAgg/inputs/inputCountAgg\")",

          "Counting1ToIoTHub": "FROM /messages/modules/Counting1/outputs/iotHub INTO $upstream",

          "CountingAggToCounting1": "FROM /messages/modules/CountingAgg/outputs/feedback INTO BrokeredEndpoint(\"/modules/Counting1/inputs/feedback\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 200
        }
      }
    }
  }
}