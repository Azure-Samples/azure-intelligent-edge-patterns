{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "apiProfile": "2019-03-01-hybrid",
  "parameters": {
    "SharedSecret": {
      "defaultValue": "ilovestack!",
      "type": "string",
      "metadata": {
        "description": "The Shared Secret phrase for the tunnel"
      }
    },
    "RRASvmName": {
      "defaultValue":"VNet-RRAS1",
      "type": "string",
      "metadata": {
        "description": "RRAS Azure resource name"
      }
    },
    "VNetName": {
      "defaultValue":"VNet",
      "type": "string",
      "metadata": {
        "description": "The name of VNet.  THis will be used to label the resources"
      }
    },
    "RemoteTunnelEndpoint": {
      "defaultValue": "38.102.180.81",
      "type": "string",
      "metadata": {
        "description": ""
      }
    }, 
    "RemoteVNetAddressSpace": {
      "defaultValue":"10.10.3.0/24",
      "type": "string",
      "metadata": {
        "description": ""
      }
    }, 
    "RemoteVNetGateway": {
      "defaultValue":"10.10.3.4",
      "type": "string",
      "metadata": {
        "description": "The gateway of the server on the remote tunnel endpoint"
      }
    }, 
    "_artifactsLocation": {
      "defaultValue": "https://raw.githubusercontent.com/lucidqdreams/azure-intelligent-edge-patterns/master/rras-vnet-vpntunnel/",
      "type": "string",
      "metadata": {
        "description": "The location of resources, such as templates and DSC modules, that the template depends on"
      }
    },
    "_artifactsLocationSasToken": {
      "defaultValue": "",
      "type": "securestring",
      "metadata": {
        "description": "Auto-generated token to access _artifactsLocation"
      }
    }
  },

  "variables": {
    "deploymentApiVersion": "2018-09-01",
    "routetableApiVersion": "2017-10-01",
    "computeApiVersion" : "2017-12-01",
    
    "RouteTable1Name": "[concat('RoutesFor',resourcegroup().name,'-rt' )]",
    "scriptfilename": "Add-Site2Site.ps1",
    "scriptfilepath": "[concat(parameters('_artifactsLocation'), 'Scripts/',variables('scriptfilename'), parameters('_artifactsLocationSasToken'))]"
  },

  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "ConfigureS2SVPNTunnel",
      "apiVersion": "[variables('deploymentApiVersion')]",
      "properties": {
        "mode": "Incremental",
        "parameters": {},
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Network/routeTables",
              "name": "[variables('RouteTable1Name')]",
              "apiVersion": "[variables('routetableApiVersion')]",
              "location": "[resourceGroup().location]",
              "properties": {
                "routes": [
                  {
                    "name": "[variables('RouteTable1Name')]",
                    "properties": {
                      "addressPrefix": "[parameters('RemoteVNetAddressSpace')]",
                      "nextHopType": "VirtualAppliance",
                      "nextHopIpAddress": "[parameters('RemoteVNetGateway')]"
                    }
                  }
                ]
              }
            },
            {
              "type": "Microsoft.Compute/virtualMachines/extensions",
              "name": "[concat(parameters('RRASvmName'),'/CustomScriptExtension')]",
              "apiVersion": "[variables('computeApiVersion')]",
              "location": "[resourceGroup().location]",
              "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                  "fileUris": [
                    "[variables('scriptFilepath')]"
                    ],
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -file ',variables('scriptFilename'), ' ', '-TargetRRASIP ',  parameters('RemoteTunnelEndpoint'), ' -TargetIPRange ', parameters('RemoteVNetAddressSpace'),' -SharedSecret ', parameters('SharedSecret'))]"
                }
              }
            }
          ]
        }
      }

    }
  ],
  "outputs": {
    
  }
}
