{
    "$schema-template": "2.0.0",
    "modulesContent": {
      "$edgeAgent": {
        "properties.desired": {
          "schemaVersion": "1.0",
          "runtime": {
            "type": "docker",
            "settings": {
              "minDockerVersion": "v1.25",
              "loggingOptions": "",
              "registryCredentials": {
                "$CONTAINER_REGISTRY_USERNAME_myacr": {
                    "username": "$CONTAINER_REGISTRY_USERNAME_myacr",
                    "password": "$CONTAINER_REGISTRY_PASSWORD_myacr",
                    "address": "$CONTAINER_REGISTRY_USERNAME_myacr.azurecr.io"
                }
              }
            }
          },
          "systemModules": {
            "edgeAgent": {
              "type": "docker",
              "settings": {
                "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
                "createOptions": {}
              }
            },
            "edgeHub": {
              "type": "docker",
              "status": "running",
              "restartPolicy": "always",
              "settings": {
                "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
                "createOptions": {
                  "HostConfig": {
                    "PortBindings": {
                      "5671/tcp": [
                        {
                          "HostPort": "5671"
                        }
                      ],
                      "8883/tcp": [
                        {
                          "HostPort": "8883"
                        }
                      ],
                      "443/tcp": [
                        {
                          "HostPort": "443"
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "modules": {
            "lvaEdge": {
              "version": "1.0",
              "type": "docker",
              "status": "running",
              "restartPolicy": "always",
              "settings": {
                "image": "mcr.microsoft.com/media/live-video-analytics:1",
                "createOptions": {
                  "HostConfig": {
                    "LogConfig": {
                      "Type": "",
                      "Config": {
                        "max-size": "10m",
                        "max-file": "10"
                      }
                    },
                    "Mounts": [
                      {                
                        "Target": "/var/media",                
                        "Source": "$OUTPUT_VIDEO_FOLDER_ON_DEVICE",                
                        "Type": "volume"                
                      },
                      {                
                        "Target": "/var/lib/azuremediaservices",                
                        "Source": "$APPDATA_FOLDER_ON_DEVICE",                
                        "Type": "volume"                
                      }]
                  }
                }
              }
            },
            "rtspsim": {
              "version": "1.0",
              "type": "docker",
              "status": "running",
              "restartPolicy": "always",
              "settings": {
                "image": "mcr.microsoft.com/lva-utilities/rtspsim-live555:1.2",
                "createOptions": {
                  "HostConfig": {
                     "Mounts": [      
                      {        
                        "Source": "$INPUT_VIDEO_FOLDER_ON_DEVICE",        
                        "Target": "/live/mediaServer/media",        
                        "Type": "volume"      
                        }    
                      ],
                      "PortBindings": {
                        "554/tcp": [
                            {
                                "HostPort": "554"
                            }
                        ]
                   }
                  }
                }
              }
            },
            "lpraimodule": {
                "version": "1.0",
                "type": "docker",
                "status": "running",
                "restartPolicy": "always",
                "settings": {
                    "image": "teamlvacontainerregistry.azurecr.io/t2:v2",
                    "createOptions": {
                        "HostConfig": {
                            "runtime": "nvidia",
                            "PortBindings": {
                                "5001/tcp": [
                                {
                                    "HostPort": "5001"
                                }
                                ]
                            },
                            "DeviceCgroupRules": [
                                "c 189:* rwm"
                            ],
                            "LogConfig": {
                                "Type": "",
                                "Config": {
                                  "max-size": "100m",
                                  "max-file": "10"
                                }
                              },
                            "Mounts": [
                                {                
                                    "Target": "/var/media",                
                                    "Source": "$OUTPUT_VIDEO_FOLDER_ON_DEVICE",                
                                    "Type": "volume"                
                                  }
                            ],
                            "Privileged": true
                        }
                    }
                }
            }
          }
        }
      },
      "$edgeHub": {
        "properties.desired": {
          "schemaVersion": "1.0",
          "routes": {
            "LVAToHub": "FROM /messages/modules/lvaEdge/outputs/* INTO $upstream"
          },
          "storeAndForwardConfiguration": {
            "timeToLiveSecs": 7200
          }
        }
      },
      "lvaEdge": {
        "properties.desired": {
          "applicationDataDirectory": "/var/lib/azuremediaservices",
          "azureMediaServicesArmId": "/subscriptions/8eb87630-972c-4c36-a270-f330e6c063df/resourceGroups/teamlvarg/providers/microsoft.media/mediaservices/teamlvamediaservices",
          "aadTenantId": "72f988bf-86f1-41af-91ab-2d7cd011db47",
          "aadServicePrincipalAppId": "3c4a3bb7-32cc-4cee-bef5-31a4b93e52f4",
          "aadServicePrincipalSecret": "a9eb7273-be60-4eb6-90b7-49275ebaad2d",
          "aadEndpoint": "https://login.microsoftonline.com",
          "aadResourceId": "https://management.core.windows.net/",
          "armEndpoint": "https://management.azure.com/",
          "diagnosticsEventsOutputName": "AmsDiagnostics",
          "operationalEventsOutputName": "AmsOperational",
          "logLevel": "Verbose",
          "logCategories": "Application,Events",
          "allowUnsecuredEndpoints": true,
          "telemetryOptOut": false
        }
      }
    }
  }
  