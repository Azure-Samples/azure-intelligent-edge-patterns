{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "jetcontainerregistry": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "$CONTAINER_REGISTRY_LOGIN_SERVER"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "redisdb": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "bitnami/redis:latest",
              "createOptions": {}
            },
            "env": {
              "ALLOW_EMPTY_PASSWORD": {
                "value": "yes"
              }
            }
          },
          "apiserver": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.apiserver}",
              "createOptions": {
                "ExposedPorts": {
                  "80/tcp": {}
                },
                "HostConfig": {
                  "Binds": [
                    "/$SHARE_NAME/out:/app/wwwroot/images/output"
                  ],
                  "PortBindings": {
                    "80/tcp": [
                      {
                        "HostPort": "3001"
                      }
                    ]
                  }
                }
              }
            }
          },
          "clientsite": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.clientsite}",
              "createOptions": {
                "ExposedPorts": {
                  "80/tcp": {}
                },
                "HostConfig": {
                  "Binds": [
                    "$SHARE_NAME:/imagefiles"
                  ],
                  "PortBindings": {
                    "80/tcp": [
                      {
                        "HostPort": "3003"
                      }
                    ]
                  }
                }
              }
            }
          },
          "grocerymodel": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "intelligentedge/out-of-stock-cpu:0.1.0",
              "createOptions": {}
            }
          },
          "imageprocessor": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.imageprocessor.debug}",
              "createOptions": {
              }
            }
          },
          "camera": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.camera.debug}",
              "createOptions": {
              }
            }
          },
          "boundingboxprocessor": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.boundingboxprocessor.debug}",
              "createOptions": {
                "HostConfig": {
                  "Binds": [
                    "/imagefiles:/imagefiles"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "imageprocessorToIoTHub": "FROM /messages/modules/imageprocessor/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "redisdb": {
      "properties.desired": {}
    },
    "apiserver": {
      "properties.desired": {}
    },
    "clientsite": {
      "properties.desired": {}
    },
    "camera": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "camera": {
          "url": "$CAMERA_IMAGE_URL",
          "id": "$CAMERA_ID",
          "type": "$CAMERA_TYPE",
          "secondsBetweenImages": 10,
          "disabled": false
        }
      }
    },
    "imageprocessor": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "uploadToBlobStorage": "$UPLOAD_TO_BLOB_STORAGE",
        "blobStorageSasUrl": "$BLOB_STORAGE_SAS_URL",
        "mlModelType": "$ML_MODEL_TYPE"
      }
    },
    "boundingboxprocessor": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "api_ip_address": "$EXTERNAL_IP_ADDRESS"
      }
    }
  }
}